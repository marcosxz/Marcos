algoritmo "VerificarMaioridade"
// Função : Verificar se uma pessoa é maior de idade
var
    idade: inteiro

inicio
    escreva("Digite sua idade: ")
    leia(idade)

    se (idade >= 18) então
        escreva("Você é maior de idade.")
        senao
        escreva("Você é menor de idade.")
    fimse
fimalgoritmo

